// 급여 월 옵션 생성
function initializePayrollMonths() {
  const select = document.getElementById('payroll-month');
  const currentDate = new Date();
  
  for (let i = 0; i < 12; i++) {
    const date = new Date(currentDate.getFullYear(), currentDate.getMonth() - i, 1);
    const value = `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}`;
    const text = `${date.getFullYear()}년 ${date.getMonth() + 1}월`;
    
    const option = document.createElement('option');
    option.value = value;
    option.textContent = text;
    select.appendChild(option);
  }
}

// 새 직원 등록
document.getElementById('new-employee-form').addEventListener('submit', async (e) => {
  e.preventDefault();
  
  const formData = new FormData(e.target);
  const employeeData = {
    name: formData.get('name'),
    department: formData.get('department'),
    position: formData.get('position'),
    employment_type: formData.get('employment_type'),
    hire_date: formData.get('hire_date'),
    phone: formData.get('phone'),
    email: formData.get('email'),
    salary_type: formData.get('salary_type')
  };
  
  try {
    const response = await fetch(`${API_BASE_URL}/employees`, {
      method: 'POST',
      headers: getAuthHeaders(),
      body: JSON.stringify({ employee: employeeData })
    });
    
    const result = await response.json();
    
    if (response.ok) {
      alert(result.message);
      closeNewEmployeeModal();
      if (currentTab === 'employees') {
        loadEmployees();
      }
      if (currentTab === 'dashboard') {
        loadDashboard();
      }
    } else {
      alert(`등록 실패: ${result.errors ? result.errors.join(', ') : result.message}`);
    }
  } catch (error) {
    console.error('직원 등록 실패:', error);
    alert('직원 등록 중 오류가 발생했습니다.');
  }
});

